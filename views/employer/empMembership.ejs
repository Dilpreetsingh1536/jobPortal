<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Membership Plans</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="css/nav.css" />
    <link rel="stylesheet" type="text/css" href="css/footer.css" />
    <link rel="stylesheet" type="text/css" href="css/main.css" />
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <div class="container mt-5">
        <h1 class="mb-4">Membership Plans</h1>
        <div class="row">
            <!-- Example Plan Card -->
            <% ['Free', 'Basic', 'Premium'].forEach(function(plan) { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow">
                        <div class="card-header">
                            <h4 class="my-0 font-weight-normal"><%= plan %> Plan</h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title">$<%= plan === 'Free' ? 0 : plan === 'Basic' ? 9.99 : 19.99 %><small class="text-muted">/ mo</small></h1>
                            <ul class="list-unstyled mt-3 mb-4">
                                <li>10 users included</li>
                                <li>2 GB of storage</li>
                                <li>Email support</li>
                                <li>Help center access</li>
                            </ul>
                            <form action="/upgradeMembership" method="get">
                                <input type="hidden" name="plan" value="<%= plan %>">
                                <button type="submit" class="btn btn-lg btn-block btn-outline-primary">Select</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta
        name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Edit Employer Details</title>
    <link
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" type="text/css" href="css/nav.css" />
    <link rel="stylesheet" type="text/css" href="css/footer.css" />
    <link rel="stylesheet" type="text/css" href="css/password.css" />
    <!-- Include additional CSS if needed for employer details editing -->
</head>
<%- include('./partials/nav.ejs') %>
<body>
    <div class="container">
        <h1>Edit Employer Details</h1>
        <form method="post" action="/update-emp-details">
            <div class="form-group">
                <label for="employerName">Employer Name</label>
                <input type="text" class="form-control" id="employerName" name="employerName" value="<%= employer.employerName %>" required>
            </div>
            <div class="form-group">
                <label for="employerId">Employer ID</label>
                <input type="text" class="form-control" id="employerId" name="employerId" value="<%= employer.employerId %>" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= employer.email %>" required>
            </div>
            <!-- Add more fields for other employer details if needed -->
            <div id="error-message" style="display: none; color: red; margin: 5px;"></div>
            <button type="submit" class="btn btn-success">Update</button>
        </form>
    </div>
        <script>
            $(document).ready(function() {
                $('form').submit(function(event) {
                    event.preventDefault();

                    var formData = $(this).serialize(); 

                    $.post('/update-emp-details', formData, function(response) {
                        // Redirect to empDashboard on success
                        window.location.href = "/empDashboard";
                    }).fail(function(response) {
                        // Display error message if there is an error
                        $('#error-message').text(response.responseJSON.error).show();
                    });
                });
            });
        </script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
<%- include('./partials/footer.ejs') %>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>All Users</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/nav.css" />
    <link rel="stylesheet" type="text/css" href="/css/footer.css" />
</head>
<body>
<%- include('./partials/nav.ejs') %>

<div class="container mt-5">
    <h1 class="mb-4">All Users</h1>
    <ul class="list-group">
        <% users.forEach(function(user, index) { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><%= user.username %> - <%= user.email %></span>
                <div>
                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#userModal<%= index %>">View</button>
            
                    <form action="/deleteUser" method="POST" style="display: inline;">
                        <input type="hidden" name="email" value="<%= user.email %>">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
        
                <!-- User Detail Modal -->
                <div class="modal fade" id="userModal<%= index %>" tabindex="-1" role="dialog" aria-labelledby="userModalLabel<%= index %>" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="userModalLabel<%= index %>">User Details</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p><strong>Username:</strong> <%= user.username %></p>
                                <p><strong>Email:</strong> <%= user.email %></p>
                                <!-- Add more user details here -->

                                <h5><strong>Education:</strong></h5>
                                <% user.education.forEach(function(edu){ %>
                                    <p>Title: <%= edu.educationTitle %></p>
                                    <p>Major <%= edu.major %></p>
                                    <p>Institution:<%= edu.institutionName %></p>
                                    <p>Start Date:<%= new Date(edu.startDate).toLocaleDateString() %></p>
                                    <p>End Date:<%= edu.endDate ? new Date(edu.endDate).toLocaleDateString() : 'Present' %></p>
                                <% }); %>
                                <!-- Display Experience Details -->
                                <h5><strong>Experience:</strong> </h5>
                                <% user.experience.forEach(function(exp){ %>
                                    <p>Job Title: <%= exp.jobTitle %></p>
                                    <p>Company:<%= exp.company %></p>
                                    <p>Description: <%= exp.description %></p>
                                    <p>Start Date:<%= new Date(exp.expStartDate).toLocaleDateString() %></p>
                                    <p>End Date: <%= exp.expEndDate ? new Date(exp.expEndDate).toLocaleDateString() : 'Present' %></p>
                                <% }); %>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        <% }); %>        
    </ul>
    <nav aria-label="Page navigation" style="background-color: white;">
        <ul class="pagination justify-content-center">
            <% for(let i = 1; i <= pages; i++) { %>
                <li class="page-item <%= i === current ? 'active' : '' %>">
                    <a class="page-link" href="/allUsers?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<%- include('./partials/footer.ejs') %>
</body>
</html>

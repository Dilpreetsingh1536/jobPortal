<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Admin Account</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="css/nav.css" />
    <link rel="stylesheet" type="text/css" href="css/footer.css" />
</head>
<%- include('./partials/nav.ejs') %>

    <body style="background-color: #f8f9fa">
        <div class="container mt-5">
            <h1 class="mb-4">Admin Account</h1>
            <div class="row">

                <div class="col-md-6">
                    <div class="card" style="
                            border: 1px solid #ccc;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            padding: 20px;
                            margin-bottom: 20px;
                        ">
                        <div class="card-body">
                            <h3 class="card-title" style="font-size: 24px; font-weight: bold">
                                New Messages
                            </h3>
                            <!-- Add content here for applied jobs -->
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card" style="
                            border: 1px solid #ccc;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            padding: 20px;
                            margin-bottom: 20px;
                        ">
                        <div class="card-body">
                            <h3 class="card-title" style="font-size: 24px; font-weight: bold">
                                List of Users
                            </h3>
                            <ul>
                                <% users.forEach(function(user, index) { %>
                                    <li>
                                        <%= user.username %>
                                        <form action="/deleteUser" method="POST" style="display: inline;">
                                            <input type="hidden" name="email" value="<%= user.email %>">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                        <!-- View Button -->
                                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#userModal<%= index %>">View</button>
                                
                                        <!-- User Modal -->
                                        <div class="modal fade" id="userModal<%= index %>" tabindex="-1" role="dialog" aria-labelledby="userModalLabel<%= index %>" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="userModalLabel<%= index %>">User Details</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Name: <%= user.name %></p>
                                                        <p>Username: <%= user.username %></p>
                                                        <p>Email: <%= user.email %></p>
                                                        <!-- Add more user details here -->
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="card" style="
                            border: 1px solid #ccc;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            padding: 20px;
                            margin-bottom: 20px;
                        ">
                        <div class="card-body">
                            <h3 class="card-title" style="font-size: 24px; font-weight: bold">
                                Employers Jobs
                            </h3>
                            <ul>
                                <% jobs.forEach(function(job) { %>
                                    <li>
                                        <%= job.jobTitle %>
                                    </li>
                                    <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card" style="
                            border: 1px solid #ccc;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            padding: 20px;
                            margin-bottom: 20px;
                        ">
                        <div class="card-body">
                            <h3 class="card-title" style="font-size: 24px; font-weight: bold">
                                List of Employers
                            </h3>
                            <ul>
                                <% employers.forEach(function(employee, index) { %>
                                    <li>
                                        <%= employee.employerName %>
                                        <form action="/deleteEmployer" method="POST" style="display: inline;">
                                            <input type="hidden" name="email" value="<%= employee.email %>">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                        <!-- View Button -->
                                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#employerModal<%= index %>">View</button>
                                
                                        <!-- Employer Modal -->
                                        <div class="modal fade" id="employerModal<%= index %>" tabindex="-1" role="dialog" aria-labelledby="employerModalLabel<%= index %>" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="employerModalLabel<%= index %>">Employer Details</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Employer Name: <%= employee.employerName %></p>
                                                        <p>Employer ID: <%= employee.employerId %></p>
                                                        <p>Email: <%= employee.email %></p>
                                                        <!-- Add more employer details here -->
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                <% }); %>
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </body>
    <%- include('./partials/footer.ejs') %>

</html>
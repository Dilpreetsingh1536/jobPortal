<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <title>User Account</title>
        <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        />
        <link rel="stylesheet" type="text/css" href="css/nav.css" />
        <link rel="stylesheet" type="text/css" href="css/footer.css" />
    </head>
    <%- include('./partials/nav.ejs') %>

    <body style="background-color: #f8f9fa">
        <div class="container mt-5">
            <h1 class="mb-4">User Account</h1>
            <div class="row">
                <div class="col-md-6">
                    <div
                        class="card"
                        style="
                            border: 1px solid #ccc;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            padding: 20px;
                            margin-bottom: 20px;
                        "
                    >
                        <div class="card-body">
                            <h3
                                class="card-title"
                                style="font-size: 24px; font-weight: bold"
                            >
                                Name: <%= user.name %>
                            </h3>
                            <h5
                                class="card-subtitle mb-3 text-muted"
                                style="font-size: 18px"
                            >
                                Username: <%= user.username %>
                            </h5>
                            <p
                                class="card-text"
                                style="font-size: 16px; margin-top: 10px"
                            >
                                Email: <%= user.email %>
                            </p>
                            <a
                                href="/edit-user-details"
                                class="btn btn-success"
                                style="margin-top: 20px"
                                >Edit Details</a
                            >
                            <a
                                href="/userChangePassword"
                                class="btn btn-info"
                                style="margin-top: 20px"
                                >Change Password</a
                            >
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div
                        class="card"
                        style="
                            border: 1px solid #ccc;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            padding: 20px;
                            margin-bottom: 20px;
                        "
                    >
                        <div class="card-body">
                            <h3
                                class="card-title"
                                style="font-size: 24px; font-weight: bold"
                            >
                                Education
                            </h3>

                            <% if (user.education.length === 0) { %>
                            <h2>No education posted.</h2>
                            <% } else { %>
                            <div class="list-group">
                                <% user.education.forEach(edu => { %>
                                <div class="list-group-item">
                                    <h5 class="mb-1">
                                        <%= edu.educationTitle %>
                                    </h5>
                                    <p class="mb-1"><%= edu.major %></p>
                                    <p class="mb-1">
                                        <%= edu.institutionName %>
                                    </p>
                                    <small>
                                        <%=
                                        edu.startDate.toLocaleDateString('en-CA')
                                        %> - <%= edu.endDate ?
                                        edu.endDate.toLocaleDateString('en-CA')
                                        : 'Present' %>
                                    </small>
                                </div>
                                <% }); %>
                            </div>

                            <a
                                href="/add-education-form"
                                style="margin-top: 2em"
                                class="btn btn-info"
                                >Add</a
                            >

                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div
                        class="card"
                        style="
                            border: 1px solid #ccc;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            padding: 20px;
                            margin-bottom: 20px;
                        "
                    >
                        <div class="card-body">
                            <h3
                                class="card-title"
                                style="font-size: 24px; font-weight: bold"
                            >
                                Experience
                            </h3>
                            <% if (user.experience.length === 0) { %>
                            <h2>No experience posted.</h2>
                            <% } else { %>
                            <div class="list-group">
                                <% user.experience.forEach(exp => { %>
                                <div class="list-group-item">
                                    <h5 class="mb-1"><%= exp.jobTitle %></h5>
                                    <p class="mb-1"><%= exp.company %></p>

                                    <small>
                                        <%=
                                        exp.expStartDate.toLocaleDateString('en-CA')
                                        %> - <%= exp.expEndDate ?
                                        exp.expEndDate.toLocaleDateString('en-CA')
                                        : 'Present' %>
                                    </small>
                                    <p class="mb-1"><%= exp.description %></p>
                                </div>
                                <% }); %>
                            </div>
                            <% } %>

                            <a
                                href="/experience-form"
                                style="margin-top: 2em"
                                class="btn btn-info"
                                >Add</a
                            >
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div
                        class="card"
                        style="
                            border: 1px solid #ccc;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            padding: 20px;
                            margin-bottom: 20px;
                        "
                    >
                        <div class="card-body">
                            <h3
                                class="card-title"
                                style="font-size: 24px; font-weight: bold"
                            >
                                New Messages
                            </h3>
                            <!-- Add content here for applied jobs -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div
                        class="card"
                        style="
                            border: 1px solid #ccc;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            padding: 20px;
                            margin-bottom: 20px;
                        "
                    >
                        <div class="card-body">
                            <h3
                                class="card-title"
                                style="font-size: 24px; font-weight: bold"
                            >
                                Applied Jobs
                            </h3>
                            <!-- Add content here for applied jobs -->
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div
                        class="card"
                        style="
                            border: 1px solid #ccc;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            padding: 20px;
                            margin-bottom: 20px;
                        "
                    >
                        <div class="card-body">
                            <h3
                                class="card-title"
                                style="font-size: 24px; font-weight: bold"
                            >
                                Liked Jobs
                            </h3>
                            <!-- Add content here for liked jobs -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function toggleEducationForm() {
                var form = document.getElementById("educationForm");
                form.style.display =
                    form.style.display === "none" ? "block" : "none";
            }

            function toggleExperienceForm() {
                var form = document.getElementById("experienceForm");
                form.style.display =
                    form.style.display === "none" ? "block" : "none";
            }
        </script>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </body>
    <%- include('./partials/footer.ejs') %>
</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>User Account</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="css/nav.css" />
    <link rel="stylesheet" type="text/css" href="css/footer.css" />
    <style>
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        
        .card {
            width: calc(50% - 10px);
        }
        
        @media (max-width: 768px) {
            .card {
                width: 100%;
            }
        }
    </style>
</head>

<body style="background-color: #f8f9fa">
    <%- include('./partials/nav.ejs') %>
        <div class="container mt-5">
            <h1 class="mb-4">User Account</h1>

            <!-- User Account and New Messages -->
            <div class="card-container">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title" style="font-size: 24px; font-weight: bold">
                            User Account
                        </h3>
                        <h5 class="card-subtitle mb-3 text-muted" style="font-size: 18px">
                            Name:
                            <%= user.name %>
                        </h5>
                        <h5 class="card-subtitle mb-3 text-muted" style="font-size: 18px">
                            Username:
                            <%= user.username %>
                        </h5>
                        <p class="card-text" style="font-size: 16px; margin-top: 10px">
                            Email:
                            <%= user.email %>
                        </p>
                        <a href="/edit-user-details" class="btn btn-success" style="margin-top: 20px">Edit Details</a>
                        <a href="/userChangePassword" class="btn btn-info" style="margin-top: 20px">Change Password</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title" style="font-size: 24px; font-weight: bold">
                            New Messages
                        </h3>
                        <!-- Add content here for new messages -->
                        <a href="/userAllMessages" class="btn btn-info" style="margin-top: 5px">View More</a>
                    </div>
                </div>
            </div>

            <!-- Experience and Education -->
            <div class="card-container">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title" style="font-size: 24px; font-weight: bold">
                            Experience
                        </h3>
                        <form action="/setEditExperienceId" method="post">
                            <% if (sortedExperiences.length === 0) { %>
                                <h2>No experience posted.</h2>
                                <% } else { %>
                                    <div class="list-group">
                                        <% sortedExperiences.slice(0, 3).forEach(exp => { %>
                                            <div class="list-group-item" style="margin-top: 0.5em">
                                                <h5 class="mb-1">
                                                    <%= exp.jobTitle %>
                                                </h5>
                                                <p class="mb-1">
                                                    <%= exp.company %>
                                                </p>
                                                <small>
                                        <%= exp.expStartDate.toLocaleDateString('en-CA') %> - <%= exp.expEndDate ? exp.expEndDate.toLocaleDateString('en-CA') : 'Present' %>
                                    </small>
                                                <p class="mb-1">
                                                    <%= exp.description %>
                                                </p>
                                                <div style="margin-top: 0.5em">
                                                    <a href="/editExperience?experienceId=<%= exp._id %>" class="btn btn-primary btn-sm">Edit</a>
                                                    <a href="/setDeleteExpId/<%= exp._id %>" class="btn btn-danger btn-sm">
                                            Delete
                                        </a>
                                                </div>
                                            </div>
                                            <% }); %>
                                    </div>
                                    <% } %>
                                        <a href="/experience-form" style="margin-top: 20px" class="btn btn-success">Add</a>
                                        <a href="/moreExperience" class="btn btn-info" style="margin-top: 20px">View More</a>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title" style="font-size: 24px; font-weight: bold">
                            Education
                        </h3>
                        <form action="/setEditEducationId" method="post">
                            <% if (sortedEducations.length === 0) { %>
                                <h2>No education posted.</h2>
                                <% } else { %>
                                    <div class="list-group">
                                        <% sortedEducations .slice(0, 3).forEach(edu => { %>
                                            <div class="list-group-item" style="margin-top: 0.5em">
                                                <h5 class="mb-1">
                                                    <%= edu.educationTitle %>
                                                </h5>
                                                <p class="mb-1">
                                                    <%= edu.major %>
                                                </p>
                                                <p class="mb-1">
                                                    <%= edu.institutionName %>
                                                </p>
                                                <small>
                                        <% if (edu.startDate) { %>
                                            <%= edu.startDate.toLocaleDateString('en-CA') %>
                                        <% } %> - <% if (edu.endDate) { %>
                                            <%= edu.endDate.toLocaleDateString('en-CA') %>
                                        <% } else { %> Present <% } %>
                                    </small>
                                                <div style="margin-top: 0.5em">
                                                    <a href="/editEducation?educationId=<%= edu._id %>" class="btn btn-primary btn-sm">Edit</a>
                                                    <a href="/setDeleteEduId/<%= edu._id %>" class="btn btn-danger btn-sm">
                                            Delete
                                        </a>
                                                </div>
                                            </div>
                                            <% }); %>
                                    </div>
                                    <% } %>
                                        <a href="/add-education-form" style="margin-top: 20px" class="btn btn-success">Add</a>
                                        <a href="/moreEducation" class="btn btn-info" style="margin-top: 20px">View More</a>
                        </form>
                    </div>
                </div>
            </div>


            <!-- Applied Jobs and Liked Jobs -->
            <div class="card-container">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title" style="font-size: 24px; font-weight: bold">
                            Applied Jobs
                        </h3>
                        <!-- Render applied jobs -->
                        <a href="/appliedJobs" class="btn btn-info" style="margin-top: 20px">View More</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title" style="font-size: 24px; font-weight: bold">
                            Liked Jobs
                        </h3>
                        <!-- Add content here for liked jobs -->
                        <a href="/likedJobs" class="btn btn-info" style="margin-top: 20px">View More</a>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <%- include('./partials/footer.ejs') %>
</body>

</html>
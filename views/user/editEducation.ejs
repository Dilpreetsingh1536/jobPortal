<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Edit Education</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="css/nav.css" />
    <link rel="stylesheet" type="text/css" href="css/footer.css" />
    <style>
        .card {
            border: none;
            border-radius: 0.25rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
            background-color: white;
        }
        .container {
            margin-bottom: 40px;
        }
        .btn-outline-success {
            margin-top: 10px;
        }
        .btn-outline-info {
            margin-top: 10px;
        }
        .alert-success, .alert-danger {
            margin-top: 10px;
        }
    </style>
</head>
<body style="background-color: #f8f9fa">
<%- include('./partials/nav.ejs') %>

<div class="container">
    <div class="card">
        <h1 class="mb-4">Edit Education</h1>
        <% if (success && success.length > 0) { %>
            <p class="alert alert-success">
                <%= success %>
            </p>
        <% } %>
        <% if (error && error.length > 0) { %>
            <p class="alert alert-danger">
                <%= error %>
            </p>
        <% } %>
        <form method="post" action="/edit-education">
            <div class="form-group">
                <label for="educationTitle">Education Title</label>
                <input type="text" class="form-control" id="educationTitle" name="educationTitle"
                    value="<%= education.educationTitle %>" required />
            </div>
            <div class="form-group">
                <label for="major">Major</label>
                <input type="text" class="form-control" id="major" name="major"
                    value="<%= education.major %>" required />
            </div>
            <div class="form-group">
                <label for="institutionName">Institution Name</label>
                <input type="text" class="form-control" id="institutionName" name="institutionName"
                    value="<%= education.institutionName %>" required />
            </div>
            <div class="form-group">
                <label for="startDate">Start Date</label>
                <input type="date" class="form-control" id="startDate" name="startDate"
                    value="<%= education.startDate.split('T')[0] %>" required />
            </div>
            <div class="form-group">
                <label for="endDate">End Date</label>
                <input type="date" class="form-control" id="endDate" name="endDate"
                    value="<%= education.endDate ? education.endDate.split('T')[0] : '' %>" />
            </div>
            <button type="submit" class="btn btn-outline-success">
                Save Changes
            </button>
            <a href="/clearEduSession" class="btn btn-outline-info">Back</a>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<%- include('./partials/footer.ejs') %>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Sent Messages</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="css/nav.css" />
    <link rel="stylesheet" type="text/css" href="css/footer.css" />
    <style>
        .container {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
        .card {
            margin-bottom: 1rem;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 6px 10px rgba(0,0,0,0.1);
        }
        .card-title {
            color: #007bff;
        }
        .card-text {
            color: #666;
        }
        .btn-outline-danger {
            margin-top: 10px;
        }
        .alert-info {
            color: #31708f;
            background-color: #d9edf7;
            border-color: #bce8f1;
        }
    </style>
</head>
<body style="background-color: #f8f9fa;">
<%- include('./partials/nav.ejs') %>

<div class="container">
    <h1>Sent Messages</h1>
    <% if (messages.length > 0) { %>
        <% messages.forEach(message => { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">To: <%= message.recipientId.employerName %></h5>
                    <p class="card-text">Message: <%= message.message %></p>
                    <p class="card-text">Date: <%= new Date(message.timestamp).toLocaleString() %></p>
                    <% if (message.reply) { %>
                        <p class="card-text">Reply: <%= message.reply %></p>
                    <% } else { %>
                        <p class="card-text">No reply yet.</p>
                    <% } %>
                    <form action="/deleteSentMessage/<%= message._id %>" method="POST">
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="alert alert-info">No messages sent yet.</div>
    <% } %>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<%- include('./partials/footer.ejs') %>
</body>
</html>

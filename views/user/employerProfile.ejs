<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <title>Employer Profile</title>
        <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        />
        <link rel="stylesheet" type="text/css" href="css/nav.css" />
        <link rel="stylesheet" type="text/css" href="css/footer.css" />
        <link rel="stylesheet" type="text/css" href="css/main.css" />
    </head>

    <body style="background-color: #f8f9fa">
        <%- include('./partials/nav.ejs') %>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Employer Profile</h5>

                            <img
                                src="<%= emp.logo %>"
                                class="card-img-top logo"
                                alt="Employer Logo"
                            />
                            <h5 class="card-title">
                                <%= emp.employerName %>
                            </h5>
                            <p class="card-text">
                                Registration Number: <%=
                                emp.registrationNumber.toUpperCase() %>
                            </p>
                            <a href="/empMessage" class="btn btn-primary mt-3">Message</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Jobs</h5>
                            <% if (jobs.length > 0) { %> <% jobs.forEach(job =>
                            { %>
                            <div class="job">
                                <h6><%= job.title %></h6>
                                <p>
                                    <strong>Sector:</strong> <%= job.sector %>
                                </p>
                                <p>
                                    <strong>Salary:</strong> <%= job.salary %>
                                </p>
                                <p>
                                    <strong>Location:</strong> <%= job.street
                                    %>, <%= job.city %>, <%= job.province %>,
                                    <%= job.postalCode %>
                                </p>
                                <p>
                                    <strong>Description:</strong> <%=
                                    job.description %>
                                </p>
                                <a
                                    href="/apply/<%= job._id %>"
                                    class="btn btn-success"
                                    >Apply</a
                                >
                            </div>
                            <% }) %> <% } else { %>
                            <p>No jobs available</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('./partials/footer.ejs') %>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </body>
</html>

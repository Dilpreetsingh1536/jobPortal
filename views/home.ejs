<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Home Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/nav.css" />
    <link rel="stylesheet" type="text/css" href="css/footer.css" />
    <link rel="stylesheet" type="text/css" href="css/home.css" />
</head>

<body>

    <%- include('./partials/nav.ejs') %>

        <div class="our-services section-pad-t30">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-tittle text-center">

                            <h2 style="margin-top: 10px;">Browse Top Categories </h2>
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-contnet-center">
                    <% topSectors.forEach(function(sector) { %>
                        <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
                            <div class="single-services text-center mb-30">
                                <div class="services-ion">
                                    <span class="flaticon-tour"></span>
                                </div>
                                <div class="services-cap">
                                    <h5><a style="color: #000000" href="/searchJob?sector=<%= encodeURIComponent(sector) %>"><%= sector %></a></h5>
                                </div>
                            </div>
                        </div>
                    <% }); %>   
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="browse-btn2 text-center mt-50">
                            <a class="border-btn2" href="/searchJob">Browse All Sectors</a>
                        </div>
                    </div>
                </div>
                <!-- Featured Jobs Section Start -->
                <section class="featured-jobs-area section-padding">
                    <div class="container">
                        <!-- Section Title -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section-title text-center">
                                    <span>Top Careers</span>
                                    <h2>Featured Opportunities</h2>
                                </div>
                            </div>
                        </div>
                        <!-- Jobs Row -->
                        <div class="row">
                            <% featuredJobs.forEach(function(job) { %>
                                <div class="col-md-6 mb-4"> 
                                    <div class="job-card">
                                        <div class="job-card-img">
                                            <img src="assets/imgs/<%= job.image || 'Graphic-Designer.png' %>" alt="<%= job.jobTitle %>">
                                        </div>
                                        <div class="job-card-content">
                                            <h4><%= job.jobTitle %></h4>
                                            <ul>
                                                <li><strong>Company:</strong> <%= job.employerName %></li>
                                                <li><strong>Address:</strong><i class="fas fa-map-marker-alt"></i> <%= [job.street, job.city, job.province, job.postalCode].join(', ') %></li>
                                                <li><strong>Salary:</strong> <%= job.salary %></li>
                                                <li><strong>Sector:</strong> <%= job.sector %></li>
                                                <li><strong>Description:</strong> <%= job.description %></li>
                                            </ul>
                                        </div>
                                        <div class="job-card-footer">
                                            <% if (!employer && !admin) { %>
                                                <a href="/applyJob/<%= job._id %>" class="btn btn-success">Apply Now</a>
                                            <% } else { %>
                                                <button class="btn btn-success" disabled>Apply Now</button>
                                            <% } %>
                                            <span>Posted: <%= new Date(parseInt(job._id.toString().substring(0, 8), 16) * 1000).toLocaleDateString() %></span>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                        
                    </div>
                </section>
                <!-- Featured Jobs Section End -->

                <!-- How  Apply Process Start-->
                <div class="apply-process-area apply-bg pt-150 pb-150">
                    <div class="container">
                        <!-- Section Tittle -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section-tittle white-text text-center">
                                    <span>Apply process</span>
                                    <h2> How it works</h2>
                                </div>
                            </div>
                        </div>
                        <!-- Apply Process Caption -->
                        <div class="row">
                            <div class="col-lg-4 col-md-6">
                                <div class="single-process text-center mb-30">
                                    <div class="process-ion">
                                        <span class="flaticon-search"></span>
                                    </div>
                                    <div class="process-cap">
                                        <h5>1. Search a job</h5>
                                        <p>Beginning your job search can feel overwhelming, but with a strategic
                                            approach, you can navigate this process more effectively. Here are essential
                                            steps to kickstart your job hunting journey:</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6">
                                <div class="single-process text-center mb-30">
                                    <div class="process-ion">
                                        <span class="flaticon-curriculum-vitae"></span>
                                    </div>
                                    <div class="process-cap">
                                        <h5>2. Apply for job</h5>
                                        <p>Applying for a job is more than just sending your resume; it's your first
                                            opportunity to stand out and make a great impression. Follow these steps to
                                            ensure your application is noticed:</p>
                                        <ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6">
                                <div class="single-process text-center mb-30">
                                    <div class="process-ion">
                                        <span class="flaticon-tour"></span>
                                    </div>
                                    <div class="process-cap">
                                        <h5>3. Get your job</h5>
                                        <p>Once you've applied, stay proactive by following up on your applications.
                                            With persistence and the right qualifications, you'll land the job that's
                                            perfect for you.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Latest news section start-->
                <section class="latest-news">
                    <div class="container">
                        <h2 class="section-title text-center">Latest News</h2>
                        <div class="news-items">
                            <!-- News Item -->
                            <div class="news-item">
                                <h3><a href="#">5 Resume Tips That Will Get You Noticed</a></h3>
                                <p>Discover how to make your resume stand out to recruiters and hiring managers.</p>
                            </div>
                            <!-- News Item -->
                            <div class="news-item">
                                <h3><a href="#">How to Prepare for a Virtual Job Interview</a></h3>
                                <p>Virtual interviews are the new norm. Here's how you can ace yours.</p>
                            </div>
                        </div>
                    </div>
                </section>
                <!--Latest news section end-->
                <!--why choose us start-->
                <section class="why-choose-us">
                    <div class="container">
                        <h2 class="section-title text-center">Why Choose Us</h2>
                        <div class="features">
                            <div class="feature">
                                <h3>Wide Range of Jobs</h3>
                                <p>Access thousands of job listings across various industries.</p>
                            </div>
                            <div class="feature">
                                <h3>Trusted by Professionals</h3>
                                <p>Preferred by job seekers and employers alike for our reliability and efficiency.</p>
                            </div>
                            <div class="feature">
                                <h3>User-Friendly Interface</h3>
                                <p>Our platform is easy to navigate, making your job search or recruitment process a
                                    breeze.</p>
                            </div>
                        </div>
                    </div>
                </section>
                <!--why choose us end-->


            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

        <%- include('./partials/footer.ejs') %>

</body>

</html>